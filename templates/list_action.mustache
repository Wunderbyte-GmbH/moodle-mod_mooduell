{{!
    @template mod_mooduell/modal_open_this_game
    Template which defines the id column in a list.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * counter - int
    * deleteLink - string
    * thisgametable - string of HTML

    Example context (json):
    {
        "counter": 1,
        "deletelink": "https://mod/mooduell/deletethis.php",
        "thisgametable": "<table><tr><td>emptytable</td></tr></table>"
    }
}}


<a href="#" data-toggle="modal" data-target="#mooduell-modal{{counter}}">
    <i class="fa fa-info"></i>
</a>
<a href="{{{deletelink}}}">
    <i class="fa fa-trash"></i>
</a>

<div id="mooduell-modal{{counter}}" class="modal in" tabindex="-1" role="dialog"
     aria-labelledby="mooduellModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="mooduellModalLabel">{{counter}}</h5>
                <button type="button" class="btn btn-closex" data-dismiss="modal">X</button>
            </div>
            <div class="modal-body">
                <!-- The actual content goes here. -->
                <div id="mooduell-table-results">
                    {{{thisgametable}}}
                </div>
            </div>
            <div class="modal-footer bg-primary">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    console.log('idstring {{idscring}} checking in');
    require(['local_wunderbyte_table/init'], function(init) {
     init.init('{{idstring}}', '{{encodedtable}}');
    });
</script>