{{!
    @template mod_mooduell/tablegamesteacher
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * headings - array: An array of table headings.
    * rows - array: An array of content rows for the table.

    }}

<table class="generaltable fullwidth fieldslist" id="opengamestable">
    <thead>
    <tr>
        <th scope="col">{{#str}} playera, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} playeraresults, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} playerb, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} playerbresults, mod_mooduell {{/str}}</th>
        <th scope="col" class="text-right">{{#str}} action, mod_mooduell {{/str}}</th>
    </tr>
    </thead>
    <tbody>
    {{#opengames}}
        <tr class="field">
            <td>{{playera}}</td>
            <td>{{playeraresults}}</td>
            <td>{{playerb}}</td>
            <td>{{playerbresults}}</td>
            <td class="text-right">
                {{! <a href="{{editfieldurl}" data-role="editfield">{{#pix}
                    t/edit, core, {{#str} edit, moodle {{/str} {{/pix}</a> }}
                <a href="view.php?action=viewquestions&id={{mooduellid}}&gameid={{gameid}}" data-id="{{id}}" data-role="deletefield">{{#pix}}
                t/viewdetails, core, {{#str}} view, moodle {{/str}} {{/pix}}</a>
                <a href="view.php?action=delete&id={{mooduellid}}&gameid={{gameid}}" data-id="{{id}}" data-role="deletefield">{{#pix}}
                t/delete, core, {{#str}} delete, moodle {{/str}} {{/pix}}</a>
            </td>
        </tr>
    {{/opengames}}
    </tbody>
</table>