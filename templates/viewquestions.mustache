{{!
    @template mod_mooduell/viewpage
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * headings - array: An array of table headings.
    * rows - array: An array of content rows for the table.
    
    }}
<h2>{{#str}} listofquestions, mod_mooduell {{/str}}</h2>

<table class="generaltable fullwidth fieldslist">
    <thead>
    <tr>
        <th scope="col">{{#str}} questionid, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} questionimage, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} questiontext, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} questiontype, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} questiontextlength, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} category, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} questionstatus, mod_mooduell {{/str}}</th>
        <th scope="col" class="text-right">{{#str}} action, mod_mooduell {{/str}}</th>
    </tr>
    </thead>
    <tbody>
    {{#questions}}
        <tr class="field">
            <td>{{{questionid}}}</td>
            <td>{{{image}}}</td>
            <td>{{{questiontext}}}</td>
            <td>{{{questiontype}}}</td>
            <td>{{{length}}}</td>
            <td>{{{category}}}</td>
            <td>{{{status}}}</td>
            <td class="text-right">
                {{! <a href="{{editfieldurl}" data-role="editfield">{{#pix}
                    t/edit, core, {{#str} edit, moodle {{/str} {{/pix}</a> }}
                <a href="view.php?action=delete&id={{mooduellid}}&questionid={{id}}" data-id="{{id}}" data-role="deletefield">{{#pix}}
                t/delete, core, {{#str}} delete, moodle {{/str}} {{/pix}}</a>
            </td>
        </tr>
    {{/questions}}
    </tbody>
</table>

{{^questions}}
    {{#str}} noopengames, mod_mooduell {{/str}}
{{/questions}}