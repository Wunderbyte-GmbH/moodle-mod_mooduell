{{!
    @template mod_mooduell/viewpage
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finsihedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
       "statistics": {
          "courseid": "50",
          "number_of_opponents": "2",
          "number_of_open_games": "2",
          "number_of_games_finished": 0,
          "number_of_games_won": 0,
          "number_of_correct_answers": 0,
          "percentage_of_correct_answers": 0
       },
       "opengames": [],
       "finishedgames": [],
       "highscores": [],
       "quizname": "test"
    }

    }}

<h2>{{quizname}}</h2>

{{#statistics}}
{{#str}} downloaduniviemoduell, mod_mooduell {{/str}}
    <br>
    <br>
    <table class="fullwidth">
    {{#urlios}}
        <tr>
            <td>
                {{#str}} univiemooduellappstore, mod_mooduell {{/str}}
            </td>
            <td align="center">
                <a href='{{urlios}}'><img width="150px"  alt='Download from Apple App Store' src='https://developer.apple.com/app-store/marketing/guidelines/images/badge-download-on-the-app-store.svg'/></a>
            </td>
        </tr>
    {{/urlios}}
    {{#urlandroid}}
        <tr>
            <td>
                {{#str}} univiemooduellplaystore, mod_mooduell {{/str}}
            </td>
            <td align="center">
                <a href='{{urlandroid}}'><img width="170px" alt='Get it on Google Play' src='https://play.google.com/intl/en_us/badges/static/images/badges/en_badge_web_generic.png'/></a>
            </td>
        </tr>
    {{/urlandroid}}
    </table>
{{/statistics}}

<ul class="nav nav-tabs" id="mooduellTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="statistics-tab" data-toggle="tab" href="#statistics" role="tab" aria-controls="statistics" aria-selected="true"><h4>{{#str}}
            statistics, mod_mooduell {{/str}}</h4></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="opengames-tab" data-toggle="tab" href="#opengames" role="tab" aria-controls="opengames" aria-selected="true"><h4>{{#str}} opengames, mod_mooduell {{/str}}</h4></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="finishedgames-tab" data-toggle="tab" href="#finishedgames" role="tab" aria-controls="finishedgames" aria-selected="false"><h4>{{#str}} finishedgames, mod_mooduell {{/str}}</h4></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="highscores-tab" data-toggle="tab" href="#highscores" role="tab" aria-controls="highscores" aria-selected="false"><h4>{{#str}} highscores, mod_mooduell {{/str}}</h4></a>
    </li>
</ul>
<div class="tab-content" id="mooduellTabContent">
    <div class="tab-pane fade show active" id="statistics" role="tabpanel" aria-labelledby="statistics-tab">
        {{> mooduell/table_statistics_students }}
    </div>
    <div class="tab-pane fade" id="opengames" role="tabpanel" aria-labelledby="opengames-tab">
        <div id="opengamestable"></div>
    </div>
    <div class="tab-pane fade" id="finishedgames" role="tabpanel" aria-labelledby="finishedgames-tab">
        <div id="finishedgamestable"></div>
    </div>
    <div class="tab-pane fade" id="highscores" role="tabpanel" aria-labelledby="highscores-tab">
        <div id="highscorestable"></div>
    </div>
</div>

<div class="d-flex justify-content-center" id="spinner">
    <div class="spinner-border hidden" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>


{{#js}}
    require(['mod_mooduell/init'], function($) {
    $.init('student');
    });
{{/js}}