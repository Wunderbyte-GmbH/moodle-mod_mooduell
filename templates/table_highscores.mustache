{{!
    @template mod_mooduell/viewpage
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * headings - array: An array of table headings.
    * rows - array: An array of content rows for the table.

    }}

<table class="generaltable fullwidth fieldslist">
    <thead>
    <tr>
        <th scope="col">{{#str}} username, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} gamesplayed, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} gameswon, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} gameslost, mod_mooduell {{/str}}</th>
        <th scope="col">{{#str}} score, mod_mooduell {{/str}}</th>
    </tr>
    </thead>
    <tbody>
    {{#highscores}}
        <tr class="field">
            <td>{{username}}</td>
            <td>{{gamesplayed}}</td>
            <td>{{gameswon}}</td>
            <td>{{gameslost}}</td>
            <td>{{score}}</td>
        </tr>
    {{/highscores}}
    </tbody>
</table>

{{^highscores}}
    {{#str}} noopengames, mod_mooduell {{/str}}
{{/highscores}}