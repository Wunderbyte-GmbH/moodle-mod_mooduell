{{!
    @template mod_mooduell/integration_check
}}

<table class="table">
    <thead>
        <tr>
            <th>{{#str}}integrationcheck_setting, mod_mooduell{{/str}}</th>
            <th>{{#str}}integrationcheck_status, mod_mooduell{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{#str}}integrationcheck_webservicesactive, mod_mooduell{{/str}}</td>
            <td>
                {{#settings_check.webservices}}
                    <span style="color: green;">✔ {{#str}}integrationcheck_enabled, mod_mooduell{{/str}}</span>
                {{/settings_check.webservices}}
                {{^settings_check.webservices}}
                    <span style="color: red;">✘ {{#str}}integrationcheck_notenabled, mod_mooduell{{/str}}</span>
                {{/settings_check.webservices}}
            </td>
        </tr>
        <tr>
            <td>{{#str}}integrationcheck_mobilewebservicesactive, mod_mooduell{{/str}}</td>
            <td>
                {{#settings_check.mobileservices}}
                    <span style="color: green;">✔ {{#str}}integrationcheck_enabled, mod_mooduell{{/str}}</span>
                {{/settings_check.mobileservices}}
                {{^settings_check.mobileservices}}
                    <span style="color: red;">✘ {{#str}}integrationcheck_notenabled, mod_mooduell{{/str}}</span>
                {{/settings_check.mobileservices}}
            </td>
        </tr>
    </tbody>
</table>
