{{!
    @template mod_mooduell/viewpage
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * headings - array: An array of table headings.
    * rows - array: An array of content rows for the table.
    
    }}
<h2>{{heading}}</h2>

{{^games}}
    {{noopengames}}
{{/games}}

<table class="generaltable">
    <thead>
    <tr>
        {{#headings}}
            <th class="header" style="text-align:left;" scope="col">{{playera}}</th>
            <th class="header" style="text-align:left;" scope="col">{{playerb}}</th>
        {{/headings}}
    </tr>
    </thead>
    <tbody>
    {{#games}}
        <tr>
            <td class="cell" style="text-align:left;" scope="col">{{playera}}</td>
            <td class="cell" style="text-align:left;" scope="col">{{playerb}}</td>
        </tr>
    {{/games}}
    </tbody>
</table>